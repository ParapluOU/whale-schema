// Test facets with other WHAS features
// Simplified version focusing on facets

// ============================================================================
// FACETS + UNION TYPES
// ============================================================================

// Union of constrained types
FlexibleId: Int<1..999999> | String<5..50>

#flexible-id: FlexibleId

// ============================================================================
// FACETS + OCCURRENCE MODIFIERS
// ============================================================================

// Multiple elements with constrained values
#ages[1..10]: Int<0..150>

#usernames[0..50]: String<3..20>

#scores+: Int<0..100>

// ============================================================================
// FACETS + CHOICE BLOCKS
// ============================================================================

// Inline choice block with faceted types
#record {
    #student-name: String<1..100>
    #test-score: Int<0..100>

    // Inline choice with constraints
    ...?{
        #grade-letter: String<1, pattern: /[A-F]/>
        #grade-percent: Int<0..100>
    }
}

// ============================================================================
// FACETS IN ELEMENTS
// ============================================================================

// Elements with constrained types
#product {
    #name: String<1..200>
    #description?: String<..1000>
}
